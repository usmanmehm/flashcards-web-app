extends layout.pug

block main
  section.flashcards
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2 #{text}
        if hint
          p#hint
            i Hint: #{hint}
      .card-flip-wrap
        a(href=`/cards/${id}?side=${redirectSide}`)
          img.card-flip(src='/static/img/flip.svg')
      .card-next
        a(href='/cards')
          img(src='/static/img/next.svg')

      script(src='/static/js/app.js')
